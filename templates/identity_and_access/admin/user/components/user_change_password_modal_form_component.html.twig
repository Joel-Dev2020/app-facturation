<div class="modal fade {{ id }}" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myExtraLargeModalLabel">{{ title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(form, {'action': urlPath,'attr': {'class': 'row'}}) }}
                {% if isMe %}
                    <div class="col-12">
                        {{ form_row(form.currentPassword) }}
                    </div>
                {% endif %}
                <div class="col-12 col-lg-6 col-xl-6 col-sm-12">
                    {{ form_row(form.password.first) }}
                </div>
                <div class="col-12 col-lg-6 col-xl-6 col-sm-12">
                    {{ form_row(form.password.second) }}
                </div>
                <div class="row mt-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-light btn-sm btn-rounded me-1" data-bs-dismiss="modal">
                            <i class="bx bx-x me-1"></i> Annuler
                        </button>
                        <button type="submit" class="btn btn-danger btn-sm btn-rounded">
                            <i class="bx bx-check me-1"></i> Modifier le mot de passe
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>