<div class="modal fade {{ id }}" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myExtraLargeModalLabel">{{ title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                {{ form_start(form, {'attr': {'class': 'row'}}) }}
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    {{ form_row(form.limit) }}
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    {{ form_row(form.organization) }}
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    {{ form_row(form.email) }}
                </div>

                <div class="row mt-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-light btn-sm btn-rounded me-1" data-bs-dismiss="modal">
                            <i class="bx bx-x me-1"></i> Annuler
                        </button>
                        <button type="submit" class="btn btn-success btn-sm btn-rounded">
                            <i class="bx bx-check me-1"></i> Filtrer
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>